CREATE TABLE `Locale` (
  `id` INT NOT NULL AUTO_INCREMENT,
  `name` VARCHAR(45) NOT NULL,
  `activity` TINYINT(1) NOT NULL DEFAULT 1,
  PRIMARY KEY (`id`));

